#:kivy 1.0.9

<MainScreen>:
	FileChooser:
		FileChooserIconLayout
		
<FileView>:
	BoxLayout:
		orientation: 'vertical'
		#pos: root.pos
		BoxLayout:
			size_hint_y: None
			Button:
				text: 'Cancel'
				on_release: root.cancel()
			Button:
				text: 'Load'
				on_release: root.load(filechooser.path, filechooser.selection)

