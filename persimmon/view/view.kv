#:kivy 1.9
#:import b persimmon.view.blocks


FloatLayout:
	BlackBoard:
		id: blackboard
		pos: 0, 0
		size: 32*30, 32*30
		do_rotation: False
		do_scale: False
		do_translation: False
		auto_bring_to_front: False
		canvas.before:
			Rectangle:
				pos: 0, 0
				size: self.size
				texture: app.background
	Button:
		text: 'Execute'
		size_hint: None, None
		size: '100dp', '100dp'
		pos: 0, 0
		on_press: blackboard.process()
	Button:
		text: 'See Relations'
		size_hint: None, None
		size: '100dp', '100dp'
		pos: 300, 0
		on_press: blackboard.see_relations()
	TabbedPanel:
		pos_hint: {'top': 1}
		size_hint_y: None
		height: '100dp'
		tab_width: '200dp'
		do_default_tab: False
		TabbedPanelItem:
			text: 'Input/Output'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: 'Read .csv'
					on_press: blackboard.blocks.add_widget(b.CSVInBlock(pos=(300, 250)))
				Button:
					text: 'Write .csv'
					on_press: blackboard.blocks.add_widget(b.CSVOutBlock(pos=(300, 250)))
				Button:
					text: 'Print'
					on_press: blackboard.blocks.add_widget(b.PrintBlock(pos=(300, 250)))
		TabbedPanelItem:
			text: 'Estimators'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: 'Random Forest'
					on_press: blackboard.blocks.add_widget(b.RandomForestBlock(pos=(300, 250)))
				Button:
					text: 'SVM'
					on_press: blackboard.blocks.add_widget(b.SVMBlock(pos=(300, 250)))
		TabbedPanelItem:
			text: 'Fit & Predict'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: 'Fit'
				Button:
					text: 'Predict'
					on_press: blackboard.blocks.add_widget(b.PredictBlock(pos=(300, 250)))
		TabbedPanelItem:
			text: 'Model Selection'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: 'Cross Validation Score'
					on_press: blackboard.blocks.add_widget(b.CrossValidationBlock(pos=(300, 250)))
				Button:
					text: 'Grid Search'
					on_press: blackboard.blocks.add_widget(b.GridSearchBlock(pos=(300, 250)))
				Button:
					text: 'K-Folds'
					on_press: blackboard.blocks.add_widget(b.TenFoldBlock(pos=(300, 250)))
				Button:
					text: 'Time Series Split'
		TabbedPanelItem:
			text: 'Others'
			BoxLayout:
				Button:
					text: 'Dictionary'
					on_press: blackboard.blocks.add_widget(b.DictBlock(pos=(300, 250)))



<Blackboard>:
	blocks: blocks
	Widget:
		id: blocks
