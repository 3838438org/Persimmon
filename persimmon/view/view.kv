#:kivy 1.9


BoxLayout:
	orientation: 'vertical'
	TabbedPanel:
		size_hint_y: None
		height: '100dp'
		tab_width: '200dp'
		do_default_tab: False
		TabbedPanelItem:
			text: 'Input/Output'
			Label:
				text: '.csv'
		TabbedPanelItem:
			text: 'Estimators'
			Label:
				text: 'Estimators'
		TabbedPanelItem:
			text: 'Cross Validation'
			Label:
				text: 'K-Folds'
	BlackBoard:
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				texture: app.background

<CircularButton>:
	canvas:
		Color:
			rgba: 1, 1, 0, 1
		Ellipse:
			pos: self.pos
			size: self.size

<EmptyContent@Widget>:
	canvas.before:
		Color:
			rgba: .2, .2, .2, 1
		Rectangle:
			pos: self.pos
			size: self.size

