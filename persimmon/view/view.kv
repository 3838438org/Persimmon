#:kivy 1.9


BoxLayout:
	orientation: 'vertical'
	TabbedPanel:
		size_hint_y: None
		height: '100dp'
		tab_width: '200dp'
		do_default_tab: False
		TabbedPanelItem:
			text: 'Input/Output'
			Label:
				text: '.csv'
		TabbedPanelItem:
			text: 'Estimators'
			Label:
				text: 'Estimators'
		TabbedPanelItem:
			text: 'Cross Validation'
			Label:
				text: 'K-Folds'
	BlackBoard:
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				texture: app.background
<BlackBoard>:
	Button:
		text: 'Execute'
		size_hint: None, None
		size: '100dp', '100dp'
		on_press: root.execute_graph()

