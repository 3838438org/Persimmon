#:kivy 1.0

BoxLayout:
	orientation: 'vertical'
	TabbedPanel:
		size_hint_y: None
		height: '100dp'
		tab_width: '200dp'
		do_default_tab: False
		TabbedPanelItem:
			text: 'Input/Output'
			Label:
				text: '.csv'
		TabbedPanelItem:
			text: 'Estimators'
			Label:
				text: 'Estimators'
		TabbedPanelItem:
			text: 'Cross Validation'
			Label:
				text: 'K-Folds'
	BlackBoard:
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				texture: app.background

<Block>:
	# Fixed options
	size_hint: None, None
	size: '200dp', '75dp'
	orientation: 'vertical'
	drag_rectangle: self.x, self.y, self.width, self.height
	drag_timeout: 10000000
	drag_distance: 0

	# Children
	Label:
		size_hint_y: None
		height: '20dp'
		canvas.before:
			Color:
				rgba: root.block_color
			Rectangle:
				pos: self.pos
				size: self.size
		text: root.block_label
	Widget: # content
		
<SVMBlock>:
	eyebolts: eyebolts
	# Properties
	block_label: 'SVM'
	block_color: .478, .624, .208, 1
	rad: 10
	eyebolt_x: self.x + self.width - 15
	eyebolt_y: self.y + self.height / 2
	canvas.before:
		Color:
			rgba: .2, .2, .2, 1
		Rectangle:
			pos: self.pos
			size: self.size

	FloatLayout:
		id: eyebolts
		CircularButton:
			size_hint: None, None
			size: '10dp', '10dp'
			x: eyebolts.x + eyebolts.width - 15
			y: eyebolts.y + eyebolts.height / 2 + 10


<TenFoldBlock>:
	block_label: '10-fold'
	block_color: .133, .4, .4, 1

<CircularButton>:
	canvas:
		Color:
			rgba: 1, 1, 0, 1
		Ellipse:
			pos: self.pos
			size: self.size

<EmptyContent@Widget>:
	canvas.before:
		Color:
			rgba: .2, .2, .2, 1
		Rectangle:
			pos: self.pos
			size: self.size


