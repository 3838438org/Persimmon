#:kivy 1.9
#:import b persimmon.view.blocks


FloatLayout:
	BlackBoard:
		id: blackboard
		pos: 0, 0
		size: 32*30, 32*30
		do_rotation: False
		auto_bring_to_front: False
		canvas.before:
			Rectangle:
				pos: 0, 0
				size: self.size
				texture: app.background
	Button:
		text: 'Execute'
		size_hint: None, None
		size: '100dp', '100dp'
		pos: 0, 0
		on_press: blackboard.process()
	TabbedPanel:
		pos_hint: {'top': 1}
		size_hint_y: None
		height: '100dp'
		tab_width: '200dp'
		do_default_tab: False
		TabbedPanelItem:
			text: 'Input/Output'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: '.csv input'
					on_press: blackboard.blocks.add_widget(b.CSVInBlock())
				Button:
					text: '.csv output'
					on_press: blackboard.blocks.add_widget(b.CSVOutBlock())
				Button:
					text: 'Print'
					on_press: blackboard.blocks.add_widget(b.PrintBlock())
		TabbedPanelItem:
			text: 'Estimators'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: 'Random Forest'
					on_press: blackboard.blocks.add_widget(b.RandomForestBlock())
				Button:
					text: 'SVM'
					on_press: blackboard.blocks.add_widget(b.SVMBlock())
		TabbedPanelItem:
			text: 'Cross Validation'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: 'Cross Validation Score'
					on_press: blackboard.blocks.add_widget(b.CrossValidationBlock())
				Button:
					text: 'K-Folds'
					on_press: blackboard.blocks.add_widget(b.TenFoldBlock())
				Button:
					text: 'Grid Search'
					on_press: blackboard.blocks.add_widget(b.GridSearchBlock())
		TabbedPanelItem:
			text: 'Others'
			BoxLayout:
				spacing: '10dp'
				padding: '5dp'
				Button:
					text: 'Predict'
					on_press: blackboard.blocks.add_widget(b.PredictBlock())
				Button:
					text: 'Dictionary'
					on_press: blackboard.blocks.add_widget(b.DictBlock())



<Blackboard>:
	blocks: blocks
	Widget:
		id: blocks
