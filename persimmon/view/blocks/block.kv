<Block>:
	# Fixed options
	size_hint: None, None
	size: '200dp', '75dp'
	drag_rectangle: self.x, self.y, self.width, self.height
	drag_timeout: 10000000
	drag_distance: 0
	label: label
	canvas:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			pos: self.pos
			size: self.size
	# Children
	Label:
		id: label
		pos: root.x, root.y + root.height - 20
		size_hint: None, None
		height: '20dp'
		width: root.width
		text: root.title
		canvas.before:
			Color:
				rgb: root.block_color
			Rectangle:
				pos: self.pos
				size: self.size
