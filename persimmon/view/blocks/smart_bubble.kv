<SmartBubble>:
	size_hint: None, None
	size: 160, 200
	pos: self.pos
	arrow_pos: 'left_top'
	orientation: 'vertical'
	ti: ti
	rv: rv
	TextInput:
		id: ti
		size_hint: 1, None
		height: dp(30)
		text: ''
		multiline: False
		# Text on the middle
		padding_x: (self.width - self._get_text_width(self.text, self.tab_width, self._label_cached)) / 2
		on_text: root.search(args[1])
	#RecycleView:
	ReTest:
		id: rv
		scroll_type: ['bars', 'content']
		bar_width: '10dp'
		viewclass: 'Row'
		RecycleBoxLayout:
			default_size_hint: 1, None
			default_size: None, dp(50)
			# Kivy bug, shown on examples
			size_hint_y: None
			orientation: 'vertical'
			height: self.minimum_height
			spacing: dp(2)

<Row>:
    cls_name: ''
	cls_: None
	bub: None
	backdrop: None
	touch_pos: [0, 0]
	block_color: (0.5, 0.5, 0.5)
    canvas.before:
        Color:
            rgb: root.block_color if root.block_color is not None else (0.5, 0.5, 0.5)
        Rectangle:
            size: root.width, root.height / 10 + 5
            pos: root.x, root.y + root.height * (9/10)
	Button:
		size_hint: 1, 0.9
        text: root.cls_name
		on_release: root.spawn_block()

